{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": [
      "./index.ts",
      "./src/*",
      "./lib/*"
    ],
    "exclude": [
      "./test/*.spec.ts"
    ],
    "compileOnSave": false
}
